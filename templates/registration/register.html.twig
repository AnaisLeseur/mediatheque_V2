{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

    <h1>Register</h1>

     <div class="example-wrapper">
    {{ form_start(registrationForm) }}
        <div class="row">
            <div class="col-6">
                <div> {{ form_row(registrationForm.name, {'attr' : {'class' : 'form-row-split'}, 'label':"Nom"}) }} </div>
                <div> {{ form_row(registrationForm.adress, {'label':"Adresse"}) }} </div>
                <div> {{ form_row(registrationForm.date_birth, {'label':"Date de naissance"}) }} </div>
            </div>
            <div class="col-6">
                <div> {{ form_row(registrationForm.email, {'label':"Email"}) }} </div>
                <div> {{ form_row(registrationForm.plainPassword, {'label':"Mot de passe"}) }} </div>
                <br/>

                {# ou pour faire pareil dans div col-6:  #}
            </div>
        </div>
<button type="submit" class="btn btn-lg btn-secondary btn-block">S'enregistrer</button>
    
    {{ form_end(registrationForm) }}
    </div>

{% endblock %}
