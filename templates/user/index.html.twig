{% extends 'base.html.twig' %}

{% block title %}Hello UserController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    img{
        margin-left: auto;
        margin-right: auto;
        margin-top: 15px;
        max-width: 250px;
        height: auto;
    }
</style>

<div class="example-wrapper">
<br/>
    <h1>Hello {{ app.user.name }} !</h1>
    <br/>
    <p>Vous êtes sur le site de la médiathèque, Bonne visite ! ✅</p>
    <br/>
    <h3>Voici les nouveautés</h3>

    <div id="carouselExampleSlidesOnly" class="carousel slide" data-ride="carousel">
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img class="d-block w-100" src="{{ asset('/images/books/germinal.jpeg')}}" alt="First slide">
            </div>
            <div class="carousel-item">
                <img class="d-block w-100" src="{{ asset('/images/books/fables.jpeg')}}" alt="Second slide">
            </div>
            <div class="carousel-item">
                <img class="d-block w-100" src="{{ asset('/images/books/symfony.jpeg')}}" alt="Third slide">
            </div>
        </div>
    </div>

</div>
{% endblock %}
